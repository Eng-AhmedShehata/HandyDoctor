<resources>

    <!-- Base application theme. -->
    <style name="AppThemeWithoutAB" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlueDark</item>
        <item name="colorAccent">@color/colorBlueLight</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBlueLight</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:layout_marginBottom">@dimen/dim_4dp</item>
        <item name="android:textColorHint">@color/colorBlueDark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="ETTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorBlueDark</item>
        <item name="android:drawablePadding">@dimen/dim_8dp</item>
        <item name="android:textSize">@dimen/txt_15sp</item>
    </style>


    <style name="SheetButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorBlueDark</item>
        <item name="android:drawablePadding">@dimen/dim_8dp</item>
        <item name="android:textSize">@dimen/txt_16sp</item>
        <item name="android:paddingStart">@dimen/dim_60dp</item>
        <item name="android:paddingEnd">@dimen/dim_60dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/button_backgrond_red_redius</item>
        <item name="android:layout_marginBottom">@dimen/dim_12dp</item>
        <item name="android:drawableTint">@color/colorBlueDark</item>

    </style>


</resources>
