<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/splash_fragment_iv_icon"
        android:layout_width="@dimen/dim_120dp"
        android:layout_height="@dimen/dim_120dp"
        android:layout_marginBottom="@dimen/dim_8dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_handy_doctor"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_fragment_iv_icon"
        android:gravity="center"
        android:textColor="@color/colorBlueBold"
        android:textStyle="bold"
        android:textSize="@dimen/txt_16sp"
        android:letterSpacing="0.2"
        android:text="@string/app_name"/>


</RelativeLayout>